<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovil1260061.Views.vRecuperar"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0"
                             EndPoint="0,1">
            <GradientStop Color="#00265A"
                          Offset="0.0" />
            <GradientStop Color="#003F8F"
                          Offset="0.5" />
            <GradientStop Color="#0072CE"
                          Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <!-- Grid con un spacer y dos filas: contenido principal y footer -->
    <Grid Padding="20"
          RowSpacing="10">
        <Grid.RowDefinitions>
            <!-- Spacer para empujar el contenido hacia abajo -->
            <RowDefinition Height="Auto" />
            <!-- Contenido principal -->
            <RowDefinition Height="*" />
            <!-- Footer -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- Spacer superior -->
        <BoxView Grid.Row="0"
                 HeightRequest="50"
                 Opacity="0" />
        <!-- Contenido principal -->
        <StackLayout Grid.Row="1"
                     VerticalOptions="CenterAndExpand"
                     Spacing="10">
            <!-- Logo de Pepsi ubicado al inicio del contenido -->
            <Image Source="https://i.postimg.cc/tg2cvj8D/621f8ba5654abf384c30d624.png"
                   HeightRequest="130"
                   WidthRequest="130"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10" />
            <!-- Labels de introducción -->
            <Label Text="Refresh Your World"
                   TextColor="WhiteSmoke"
                   FontSize="20"
                   HorizontalOptions="Center"
                   Margin="0,0,0,40" />
            <!-- Formulario de recuperación -->
            <Frame CornerRadius="20"
                   Padding="25"
                   HasShadow="True"
                   BorderColor="#35FFFFFF"
                   HorizontalOptions="Center"
                   WidthRequest="320"
                   Margin="0,0,0,20">
                <Frame.Background>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="1,1">
                        <GradientStop Color="#12FFFFFF"
                                      Offset="0.0" />
                        <GradientStop Color="#45FFFFFF"
                                      Offset="0.2" />
                        <GradientStop Color="#19FFFFFF"
                                      Offset="1.5" />
                    </LinearGradientBrush>
                </Frame.Background>
                <StackLayout Spacing="10">
                    <Label Text="Recover"
                           TextColor="WhiteSmoke"
                           FontSize="40"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Label Text="Account"
                           TextColor="WhiteSmoke"
                           FontSize="40"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Entry Placeholder="Enter email"
                           PlaceholderColor="WhiteSmoke"
                           BackgroundColor="Transparent"
                           TextColor="WhiteSmoke"
                           Keyboard="Email"
                           Margin="0,20,0,0"
                           Text="{Binding TxtEmail}" />
                    <Button Text="Send"
                            BackgroundColor="#001C38"
                            CornerRadius="20"
                            TextColor="White"
                            FontSize="25"
                            FontAttributes="Bold"
                            Clicked="Button_Clicked"
                            Command="{Binding ResetPassword}" />
                </StackLayout>
            </Frame>
            <!-- Label de soporte -->
            <Label Text="Having trouble? Tap here to contact our support team."
                   TextColor="WhiteSmoke"
                   FontSize="12"
                   HorizontalTextAlignment="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ContactSupportCommand}" />
                </Label.GestureRecognizers>
            </Label>
        
            <!-- Texto adicional de seguridad/instrucciones -->
            <Label Text="For your security, please ensure you use your registered email and check your spam folder for our instructions. Your account protection is our top priority."
                   TextColor="WhiteSmoke"
                   FontSize="12"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,20" />
            <!-- Back to Login -->
            
            
           
        </StackLayout>
        <!-- Footer -->
        <Label Grid.Row="2"
               Text="© 2025 PepsiCo. All rights reserved."
               FontSize="12"
               TextColor="WhiteSmoke"
               HorizontalTextAlignment="Center"
               VerticalOptions="End" />
    </Grid>
</ContentPage>
