<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovil1260061.Views.vRegistrarProducto"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Consistent styling -->
            <Style x:Key="EntryFieldStyle"
                   TargetType="Entry">
                <Setter Property="TextColor"
                        Value="Black" />
                <Setter Property="PlaceholderColor"
                        Value="#6B6B6B" />
                <Setter Property="FontSize"
                        Value="14" />
                <Setter Property="VerticalOptions"
                        Value="Center" />
            </Style>
            <Style x:Key="IconStyle"
                   TargetType="Image">
                <Setter Property="HeightRequest"
                        Value="24" />
                <Setter Property="WidthRequest"
                        Value="24" />
                <Setter Property="VerticalOptions"
                        Value="Center" />
                <Setter Property="Aspect"
                        Value="AspectFit" />
            </Style>
            <Style x:Key="InputFrameStyle"
                   TargetType="Frame">
                <Setter Property="BackgroundColor"
                        Value="#F5F5F5" />
                <Setter Property="CornerRadius"
                        Value="8" />
                <Setter Property="Padding"
                        Value="12,8" />
                <Setter Property="HasShadow"
                        Value="False" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Background>
        <SolidColorBrush Color="#F8F9FA" />
    </ContentPage.Background>
    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header area with improved design -->
        <Grid Grid.Row="0"
              ColumnDefinitions="*,*"
              BackgroundColor="#00265A">
            <StackLayout Orientation="Horizontal"
                         Grid.Column="0"
                         Padding="16,12"
                         HorizontalOptions="Start"
                         Spacing="12">
                <Image Source="logooficial.png"
                       HeightRequest="40"
                       WidthRequest="40"
                       VerticalOptions="Center" />
                <Label Text="Haydy Fashion"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Center" />
            </StackLayout>
            <Label Grid.Column="1"
                   Text="Gestión de Ventas"
                   TextColor="White"
                   FontSize="20"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   HorizontalOptions="End"
                   Margin="0,0,20,0" />
        </Grid>
        <!-- Main content area -->
        <ScrollView Grid.Row="1">
            <Frame Margin="16"
                   BackgroundColor="White"
                   CornerRadius="10"
                   HasShadow="True"
                   Padding="16">
                <StackLayout Spacing="16">
                    <!-- Search product with add button using SearchBar -->
                    <Grid ColumnDefinitions="*,Auto">
                        <SearchBar Grid.Column="0"
                                   Placeholder="Buscar Producto"
                                   PlaceholderColor="#6B6B6B"
                                   TextColor="Black"
                                   BackgroundColor="#F5F5F5"
                                   FontSize="14"
                                   HorizontalOptions="FillAndExpand" />
                        <Button Grid.Column="1"
                                Text="+"
                                FontSize="24"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="#00265A"
                                CornerRadius="25"
                                HeightRequest="50"
                                WidthRequest="50"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                Margin="8,0,0,0" />
                    </Grid>
                    <!-- Product details section -->
                    <Grid ColumnDefinitions="Auto,*"
                          RowDefinitions="Auto,Auto,Auto,Auto"
                          ColumnSpacing="16"
                          RowSpacing="12">
                        <!-- Product image placeholder with better styling -->
                        <Frame Grid.Column="0"
                               Grid.RowSpan="4"
                               BackgroundColor="#F5F5F5"
                               HeightRequest="170"
                               WidthRequest="130"
                               CornerRadius="8"
                               HasShadow="False"
                               Padding="0">
                            <Grid>
                                <Image Source="https://i.postimg.cc/NjNk27VC/photo-circle.png"
                                       HeightRequest="40"
                                       WidthRequest="40"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Opacity="0.5" />
                                <Label Text="Imagen"
                                       HorizontalOptions="Center"
                                       VerticalOptions="End"
                                       TextColor="#6B6B6B"
                                       FontSize="12"
                                       Margin="0,0,0,10" />
                            </Grid>
                        </Frame>
                        <!-- Product details entries -->
                        <Frame Grid.Column="1"
                               Grid.Row="0"
                               Style="{StaticResource InputFrameStyle}">
                            <Entry Placeholder="Nombre Producto"
                                   Style="{StaticResource EntryFieldStyle}" />
                        </Frame>
                        <Frame Grid.Column="1"
                               Grid.Row="1"
                               Style="{StaticResource InputFrameStyle}">
                            <Entry Placeholder="Precio Unitario"
                                   Style="{StaticResource EntryFieldStyle}"
                                   Keyboard="Numeric" />
                        </Frame>
                        <Frame Grid.Column="1"
                               Grid.Row="2"
                               Style="{StaticResource InputFrameStyle}">
                            <Entry Placeholder="Stock"
                                   Style="{StaticResource EntryFieldStyle}"
                                   Keyboard="Numeric" />
                        </Frame>
                        <Frame Grid.Column="1"
                               Grid.Row="3"
                               Style="{StaticResource InputFrameStyle}">
                            <Entry Placeholder="Garantía"
                                   Style="{StaticResource EntryFieldStyle}" />
                        </Frame>
                    </Grid>
                    <!-- Quantity section with improved layout -->
                    <Grid ColumnDefinitions="Auto,*"
                          ColumnSpacing="12">
                        <Image Source="https://i.postimg.cc/0y9VwNNj/stack-2.png"
                               Style="{StaticResource IconStyle}" />
                        <Frame Grid.Column="1"
                               Style="{StaticResource InputFrameStyle}">
                            <Entry Placeholder="Digitar Cantidad"
                                   Style="{StaticResource EntryFieldStyle}"
                                   Keyboard="Numeric" />
                        </Frame>
                    </Grid>
                    <!-- Subtotal section -->
                    <Grid ColumnDefinitions="Auto,*"
                          ColumnSpacing="12">
                        <Image Source="https://i.postimg.cc/QxJbhrq3/tir.png"
                               Style="{StaticResource IconStyle}" />
                        <Frame Grid.Column="1"
                               Style="{StaticResource InputFrameStyle}">
                            <Label Text="SubTotal: $0.00"
                                   TextColor="#333333"
                                   VerticalOptions="Center"
                                   FontAttributes="Bold" />
                        </Frame>
                    </Grid>
                    <!-- Total section -->
                    <Grid ColumnDefinitions="Auto,*"
                          ColumnSpacing="12">
                        <Image Source="https://i.postimg.cc/QxJbhrq3/tir.png"
                               Style="{StaticResource IconStyle}" />
                        <Frame Grid.Column="1"
                               Style="{StaticResource InputFrameStyle}"
                               BackgroundColor="#E6EFF9">
                            <Label Text="Total: $0.00"
                                   TextColor="#00265A"
                                   VerticalOptions="Center"
                                   FontAttributes="Bold"
                                   FontSize="16" />
                        </Frame>
                    </Grid>
                    <!-- Payment type with dropdown and indicator -->
                    <Grid ColumnDefinitions="Auto,*"
                          ColumnSpacing="12">
                        <Image Source="https://i.postimg.cc/NjNk27VC/photo-circle.png"
                               Style="{StaticResource IconStyle}" />
                        <Frame Grid.Column="1"
                               Style="{StaticResource InputFrameStyle}"
                               Padding="12,0">
                            <Grid ColumnDefinitions="*,Auto">
                                <Picker Title="Seleccionar Tipo de Pago"
                                        TitleColor="#6B6B6B"
                                        HorizontalOptions="Fill"
                                        Grid.Column="0">
                                    <Picker.Items>
                                        <x:String>Efectivo</x:String>
                                        <x:String>Tarjeta de Crédito</x:String>
                                        <x:String>Tarjeta de Débito</x:String>
                                        <x:String>Transferencia Bancaria</x:String>
                                        <x:String>Móvil Payment</x:String>
                                    </Picker.Items>
                                </Picker>
                                <Image Grid.Column="1"
                                       Source="https://i.postimg.cc/x1VRS1mg/calendar.png"
                                       HeightRequest="16"
                                       WidthRequest="16"
                                       Rotation="90"
                                       VerticalOptions="Center"
                                       Opacity="0.6" />
                            </Grid>
                        </Frame>
                    </Grid>
                    <!-- Divider for better section separation -->
                    <BoxView HeightRequest="1"
                             BackgroundColor="#EBEBEB"
                             Margin="0,8,0,8" />
                    <!-- Customer section header -->
                    <Label Text="Información del Cliente"
                           TextColor="#00265A"
                           FontSize="16"
                           FontAttributes="Bold"
                           Margin="0,0,0,8" />
                    <!-- Customer search using SearchBar -->
                    <SearchBar Placeholder="Buscar Cliente por Nombre o ID"
                               PlaceholderColor="#6B6B6B"
                               TextColor="Black"
                               BackgroundColor="#F5F5F5"
                               FontSize="14"
                               HorizontalOptions="FillAndExpand" />
                    <!-- Customer details with better organization -->
                    <Grid ColumnDefinitions="Auto,*"
                          RowSpacing="12"
                          ColumnSpacing="12">
                        <Image Grid.Row="0"
                               Source="https://i.postimg.cc/mD1jszmX/category.png"
                               Style="{StaticResource IconStyle}" />
                        <Frame Grid.Row="0"
                               Grid.Column="1"
                               Style="{StaticResource InputFrameStyle}">
                            <Entry Placeholder="Nombre Completo"
                                   Style="{StaticResource EntryFieldStyle}" />
                        </Frame>
                        <Image Grid.Row="1"
                               Source="https://i.postimg.cc/QxJbhrq3/tir.png"
                               Style="{StaticResource IconStyle}" />
                        <Frame Grid.Row="1"
                               Grid.Column="1"
                               Style="{StaticResource InputFrameStyle}">
                            <Entry Placeholder="Dirección"
                                   Style="{StaticResource EntryFieldStyle}" />
                        </Frame>
                        <Image Grid.Row="2"
                               Source="https://i.postimg.cc/x1VRS1mg/calendar.png"
                               Style="{StaticResource IconStyle}" />
                        <Frame Grid.Row="2"
                               Grid.Column="1"
                               Style="{StaticResource InputFrameStyle}">
                            <Entry Placeholder="Teléfono"
                                   Style="{StaticResource EntryFieldStyle}"
                                   Keyboard="Telephone" />
                        </Frame>
                    </Grid>
                </StackLayout>
            </Frame>
        </ScrollView>
        <!-- Button area with improved styling -->
        <Grid Grid.Row="2"
              ColumnDefinitions="*,*"
              Padding="16"
              ColumnSpacing="16"
              BackgroundColor="White">
            <Button Text="Atrás"
                    Grid.Column="0"
                    BackgroundColor="#6C757D"
                    TextColor="White"
                    CornerRadius="8"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="50">
                <Button.ImageSource>
                    <FileImageSource File="arrow_back.png" />
                </Button.ImageSource>
            </Button>
            <Button Text="Registrar"
                    Grid.Column="1"
                    BackgroundColor="#00265A"
                    TextColor="White"
                    CornerRadius="8"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="50">
                <Button.ImageSource>
                    <FileImageSource File="check.png" />
                </Button.ImageSource>
            </Button>
        </Grid>
    </Grid>
</ContentPage>