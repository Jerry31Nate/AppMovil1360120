<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovil1260061.Views.vRegistrarUsuarios"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0"
                             EndPoint="0,1">
            <GradientStop Color="#00265A"
                          Offset="0.0" />
            <GradientStop Color="#003F8F"
                          Offset="0.5" />
            <GradientStop Color="#0072CE"
                          Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <StackLayout VerticalOptions="CenterAndExpand">
        <Frame Margin="20"
               CornerRadius="20"
               BorderColor="#35FFFFFF">
            <Frame.Background>
                <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="1,1">
                    <!-- Inicio con un blanco translúcido -->
                    <GradientStop Color="#12FFFFFF"
                                  Offset="0.0" />
                    <!-- A 10% del recorrido, más transparente -->
                    <GradientStop Color="#45FFFFFF"
                                  Offset="0.2" />
                    <!-- Resto del fondo, completamente transparente -->
                    <GradientStop Color="#19FFFFFF"
                                  Offset="1.5" />
                </LinearGradientBrush>
            </Frame.Background>
            <StackLayout Spacing="10">
                <Image Source="https://i.postimg.cc/kgYhCny6/pepsi-new-2023-logo-png-seeklogo-478103.png"
                       HeightRequest="200"
                       WidthRequest="160"
                       Margin="0,40,0,10"></Image>
                <Label Text="Register"
                       FontSize="50"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,0,0,20"></Label>
                <Grid ColumnDefinitions="40,*"
                      Margin="10,0,0,0">
                    <Image Source="https://cdn-icons-png.flaticon.com/512/6682/6682701.png"></Image>
                    <Entry Placeholder="Enter Name"
                           PlaceholderColor="WhiteSmoke"
                           TextColor="White"
                           Grid.Column="1"
                           Text="{Binding TxtFullName}"></Entry>
                </Grid>
                <Grid ColumnDefinitions="40,*"
                      Margin="10,0,0,0">
                    <Image Source="https://cdn-icons-png.flaticon.com/512/527/527489.png"></Image>
                    <Entry Placeholder="Enter UserName"
                           PlaceholderColor="WhiteSmoke"
                           TextColor="white"
                           Grid.Column="1"
                           Text="{Binding TxtUserName}"></Entry>
                </Grid>
                <Grid ColumnDefinitions="40,*"
                      Margin="10,0,0,0">
                    <Image Source="https://images.vexels.com/media/users/3/205069/isolated/preview/f207045d96c258fed664305f0ac2c5bd-icono-de-auricular-de-telefono-azul.png"></Image>
                    <Entry Placeholder="Enter Phone"
                           PlaceholderColor="WhiteSmoke"
                           TextColor="White"
                           MaxLength="9"
                           Keyboard="Numeric"
                           Grid.Column="1"
                           Text="{Binding TxtPhone}"></Entry>
                </Grid>
                <Grid ColumnDefinitions="40,*"
                      Margin="10,0,0,0">
                    <Image Source="https://cdn-icons-png.flaticon.com/512/8344/8344917.png"></Image>
                    <Entry Placeholder="Enter Url Image"
                           PlaceholderColor="WhiteSmoke"
                           TextColor="White"
                           Grid.Column="1"
                           Text="{Binding TxtImage}"></Entry>
                </Grid>
                <Grid ColumnDefinitions="40,*"
                      Margin="10,0,0,0">
                    <Image Source="https://cdn.pixabay.com/photo/2016/06/13/17/30/mail-1454731_640.png"></Image>
                    <Entry Placeholder="Enter E-mail"
                           PlaceholderColor="WhiteSmoke"
                           TextColor="White"
                           Keyboard="Email"
                           Grid.Column="1"
                           Text="{Binding TxtEmail}"></Entry>
                </Grid>
                <Grid ColumnDefinitions="40,*"
                      Margin="10,0,0,10">
                    <Image Source="https://upload.wikimedia.org/wikipedia/commons/thumb/e/e1/Password.svg/1024px-Password.svg.png"></Image>
                    <Entry Placeholder="Enter Password"
                           PlaceholderColor="WhiteSmoke"
                           TextColor="White"
                           Keyboard="Numeric"
                           MaxLength="8"
                           IsPassword="True"
                           Grid.Column="1"
                           Text="{Binding TxtPassword}"></Entry>
                </Grid>
                <Grid ColumnDefinitions="*,*"
                      RowDefinitions="*"
                      ColumnSpacing="15">
                    <Button Text="Register"
                            BackgroundColor="#2E3292"
                            TextColor="White"
                            CornerRadius="20"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="45"
                            Grid.Column="0"
                            Grid.Row="0"
                            Command="{Binding InsertarUsuarioCommand}"></Button>
                    <Button Text="SIGN IN"
                            Grid.Column="1"
                            Grid.Row="0"
                            BackgroundColor="#ED1D23"
                            TextColor="White"
                            CornerRadius="20"
                            FontSize="16"
                            FontAttributes="Bold"
                            Clicked="Button_Clicked"></Button>
                </Grid>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>