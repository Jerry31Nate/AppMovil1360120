<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovil1260061.Views.vLogin"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0"
                             EndPoint="0,1">
            <GradientStop Color="#00265A"
                          Offset="0.0" />
            <GradientStop Color="#003F8F"
                          Offset="0.5" />
            <GradientStop Color="#0072CE"
                          Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView>
        <StackLayout Padding="20">
            <Image Source="https://i.postimg.cc/tJJnfVBJ/pepsi-logo-png-seeklogo-215597.png"
                   HeightRequest="330"
                   WidthRequest="330"
                   HorizontalOptions="CenterAndExpand"
                   Margin="0,60,0,30"/>

            <Grid>
                <!-- Frame principal del login -->
                <Frame CornerRadius="20"
                                      Padding="25"
                                      HasShadow="True"
                                      BorderColor="#35FFFFFF"
                                      HorizontalOptions="Center"
                                      WidthRequest="320">
                    <!-- Aplicación del gradiente con 4 paradas usando transparencia (80% opacidad) -->
                    <Frame.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                             EndPoint="1,1">
                            <!-- Inicio con un blanco translúcido -->
                            <GradientStop Color="#12FFFFFF"
                                          Offset="0.0" />
                            <!-- A 10% del recorrido, más transparente -->
                            <GradientStop Color="#45FFFFFF"
                                          Offset="0.2" />
                            <!-- Resto del fondo, completamente transparente -->
                            <GradientStop Color="#19FFFFFF"
                                          Offset="1.5" />
                        </LinearGradientBrush>
                    </Frame.Background>
                    <StackLayout Spacing="20">
                        <Label Text="Welcome"
                               FontSize="50"
                               FontAttributes="Bold"
                               TextColor="WhiteSmoke"
                               HorizontalOptions="Center" />
                        <StackLayout Spacing="15">
                            <Entry Placeholder="Enter your Email"
                                   PlaceholderColor="WhiteSmoke"
                                   BackgroundColor="Transparent"
                                   TextColor="White"
                                   Text="{Binding TxtEmail}" />
                            <Entry Placeholder="Enter your password"
                                   PlaceholderColor="WhiteSmoke"
                                   IsPassword="True"
                                   BackgroundColor="Transparent"
                                   TextColor="White"
                                   Text="{Binding TxtPassword}" />
                        </StackLayout>
                        <Grid ColumnDefinitions="*,*"
                              ColumnSpacing="15"
                              HorizontalOptions="CenterAndExpand">
                            <Button Text="Login"
                                    BackgroundColor="#2E3292"
                                    TextColor="White"
                                    CornerRadius="20"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    HeightRequest="45"
                                    Grid.Column="1"
                                    Command="{Binding LoginComando}" />
                            <Button Text="Exit"
                                    BackgroundColor="White"
                                    TextColor="Black"
                                    CornerRadius="20"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    HeightRequest="45" />
                        </Grid>
                        <StackLayout Spacing="15"
                                     HorizontalOptions="Center">
                            <Label Text="You don't have an account? Register here."
                                   TextColor="White"
                                   FontSize="14"
                                   HorizontalOptions="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_1" />
                                </Label.GestureRecognizers>
                            </Label>
                            <Label Text="Forgot your password?"
                                   TextColor="WhiteSmoke"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   HorizontalOptions="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>
                    </StackLayout>
                </Frame>
            </Grid>
            <Label Text="© 2025 PepsiCo. All rights reserved."
                   FontSize="12"
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,0" />
        </StackLayout>
    </ScrollView>
</ContentPage>
