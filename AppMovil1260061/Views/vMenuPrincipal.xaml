<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="AppMovil1260061.Views.vMenuPrincipal"
            NavigationPage.HasNavigationBar="False"
            SelectedTabColor="#007FFF"
            BackgroundColor="#F8F8FF"
            BarBackgroundColor="White"
            BarTextColor="Black"
            >
    <!--Pages can be added as references or inline-->
    <ContentPage Title="Perfil"
                 IconImageSource="https://i.postimg.cc/8PY4BSBD/user.png">
        
        <StackLayout HorizontalOptions="CenterAndExpand"
                     VerticalOptions="CenterAndExpand"
                     Padding="20">
            <!-- Imagen y Nombre -->
            <Frame BackgroundColor="Transparent"
                   VerticalOptions="CenterAndExpand"
                   HasShadow="False"
                   Margin="0,10,0,0"
                   Padding="0">
                <StackLayout HorizontalOptions="Center">
                    <Image Source="https://i.postimg.cc/RF3wXP78/hd-man-user-illustration-icon-transparent-png-701751694974843ybexneueic-removebg-preview.png"
                           Aspect="AspectFit"
                           HeightRequest="220"
                           WidthRequest="220"
                           HorizontalOptions="Center" />
                    <Label Text="{Binding LblNombreCompleto}"
                           FontSize="25"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           TextColor="Black"
                           Margin="0,10,0,5" />
                </StackLayout>
            </Frame>
            <!-- Datos del Usuario -->
            <Frame CornerRadius="20"
                   Padding="30"
                   HasShadow="True"
                   BackgroundColor="#F2F7FC"
                   Margin="0,30,0,0"
                   HorizontalOptions="Center">
                
                <StackLayout>
                    <Grid ColumnDefinitions="Auto, *"
                          RowDefinitions="Auto, Auto, Auto, Auto"
                          RowSpacing="12">
                        <!-- Nombre Completo -->
                        <Image Source="label.png"
                               Grid.Row="0"
                               Grid.Column="0"
                               WidthRequest="40"
                               HeightRequest="40"
                               VerticalOptions="Center"
                               HorizontalOptions="Start" />
                        <Label Text="{Binding LblNombreCompleto}"
                               TextColor="Black"
                               FontSize="18"
                               HeightRequest="40"
                               VerticalTextAlignment="Center"
                               Margin="15,5,0,5"
                               Grid.Row="0"
                               Grid.Column="1" />
                        <!-- Teléfono -->
                        <Image Source="https://i.postimg.cc/PfWCTs5y/phone.png"
                               Grid.Row="1"
                               Grid.Column="0"
                               WidthRequest="40"
                               HeightRequest="40"
                               VerticalOptions="Center"
                               HorizontalOptions="Start" />
                        <Label Text="{Binding LblTelefono}"
                               TextColor="Black"
                               FontSize="18"
                               HeightRequest="40"
                               VerticalOptions="Center"
                               VerticalTextAlignment="Center"
                               Margin="15,5,0,5"
                               Grid.Row="1"
                               Grid.Column="1" />
                        <!-- Email -->
                        <Image Source="https://i.postimg.cc/WzwznrHC/mail.png"
                               Grid.Row="2"
                               Grid.Column="0"
                               WidthRequest="40"
                               HeightRequest="40"
                               VerticalOptions="Center"
                               HorizontalOptions="Start" />
                        <Label Text="{Binding LblEmail}"
                               TextColor="Black"
                               FontSize="18"
                               HeightRequest="40"
                               VerticalOptions="Center"
                               VerticalTextAlignment="Center"
                               Margin="15,5,0,5"
                               Grid.Row="2"
                               Grid.Column="1" />
                        <!-- Username -->
                        <Image Source="https://i.postimg.cc/8PY4BSBD/user.png"
                               Grid.Row="3"
                               Grid.Column="0"
                               WidthRequest="40"
                               HeightRequest="40"
                               VerticalOptions="Center"
                               HorizontalOptions="Start" />
                        <Label Text="{Binding LblUserName}"
                               TextColor="Black"
                               FontSize="18"
                               HeightRequest="40"
                               VerticalOptions="Center"
                               VerticalTextAlignment="Center"
                               Margin="15,5,0,5"
                               Grid.Row="3"
                               Grid.Column="1" />
                    </Grid>
                    <!-- Botones -->
                    <Grid ColumnDefinitions="*,*"
                          Margin="0,20,0,0">
                        <Button Text="EDIT"
                                BackgroundColor="#004B93"
                                TextColor="White"
                                CornerRadius="20"
                                HeightRequest="45"
                                HorizontalOptions="FillAndExpand"
                                Grid.Column="0" />
                        <Button Text="LOG OUT"
                                BackgroundColor="#ED1D23"
                                TextColor="White"
                                CornerRadius="20"
                                HeightRequest="45"
                                HorizontalOptions="FillAndExpand"
                                Grid.Column="1"
                                Clicked="Button_Clicked" />
                    </Grid>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Productos"
                 IconImageSource="https://i.postimg.cc/wTMFmvN0/building-store.png">
      
        <!-- Replace the main StackLayout with a Grid -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- Search Frame at the top -->
            <Frame Grid.Row="0"
                   Margin="10,50,10,10"
                   CornerRadius="20"
                   BorderColor="Black"  
                   HasShadow="True"
                   HeightRequest="30"
                   Padding="10">
                <Image Source="https://i.postimg.cc/NfZFCtM1/search.png"
                       HorizontalOptions="EndAndExpand" />
            </Frame>
            <!-- CollectionView for products -->
            <CollectionView Grid.Row="1"
                            ItemsSource="{Binding Listaproductos}"
                            Margin="10">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     Span="1"
                                     VerticalItemSpacing="5" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="20"
                               Margin="0,0,0,10"
                               BackgroundColor="#E6EEF6"
                               Padding="25">
                            
                            <StackLayout Margin="0,0,0,10">
                                <Grid ColumnDefinitions="10"
                                      RowDefinitions="50">
                                    <Image Source="{Binding Icono}"
                                           Aspect="AspectFill"
                                           HeightRequest="100"
                                           WidthRequest="100"
                                           HorizontalOptions="CenterAndExpand"
                                           VerticalOptions="CenterAndExpand" />
                                    <StackLayout Grid.Column="1">
                                        <Label FontSize="20"
                                               TextColor="Black"
                                               FontAttributes="Bold"
                                               Text="{Binding nombre}" />
                                        <Label FontSize="13"
                                               TextColor="Black"
                                               Text="{Binding precio}" />
                                        <Label FontSize="13"
                                               TextColor="Black"
                                               Text="{Binding stock}" />
                                    </StackLayout>
                                </Grid>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <!-- Floating action button -->
            <Frame Grid.Row="1"
                   HeightRequest="70"
                   WidthRequest="70"
                   CornerRadius="40"
                   Padding="0"
                   HorizontalOptions="End"
                   VerticalOptions="End"
                   Margin="0,0,20,20"
                   HasShadow="True"
                   BorderColor="Black"
                   BackgroundColor="#007FFF">
                <ImageButton Source="https://i.postimg.cc/pLCN47SG/shoppingbagplus.png"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             Aspect="AspectFit"
                             HeightRequest="30"
                             WidthRequest="30"
                             BackgroundColor="Transparent"
                             Clicked="Button_Clicked_1" />
            </Frame>
        </Grid>
    </ContentPage>
    
    
    
    
    <ContentPage Title="Ventas"
                 IconImageSource="https://i.postimg.cc/SRTrP0B6/report-analytics.png"></ContentPage>
    <ContentPage IconImageSource="https://i.postimg.cc/7Pmmh755/brand-visa.png"
                 Title="Pagos" />
    <ContentPage IconImageSource="https://i.postimg.cc/J04xK727/users.png"
                 Title="Clientes" />
</TabbedPage> 